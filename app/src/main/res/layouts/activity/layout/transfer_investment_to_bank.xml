<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/withMoneyLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f5ff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#196cfe"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <RelativeLayout
                android:id="@+id/headerbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/red_theme"
                android:paddingBottom="5dp">

                <Button
                    android:id="@+id/send_back_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_next_new" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Send Money"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="15dp"
                    android:elevation="5dp"
                    android:padding="5dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp">

                            <com.safepayu.wallet.custom_view.CustomTextView
                                style="@style/TextAppearance.AppCompat.Large"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dp"
                                android:text="Wallet Balance"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                app:fontCustom="@string/Roboto" />

                            <com.safepayu.wallet.custom_view.CustomTextView
                                android:id="@+id/walletBalance"
                                style="@style/TextAppearance.AppCompat.Large"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="end"
                                android:text=""
                                android:textColor="@color/grey_800"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:fontCustom="@string/Roboto" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp">

                            <com.safepayu.wallet.custom_view.CustomTextView
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:text="Minimum Withdrawal Amount"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                app:fontCustom="@string/Roboto" />

                            <com.safepayu.wallet.custom_view.CustomTextView
                                android:id="@+id/minLimit_sendMoney"
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/red_500"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                app:fontCustom="@string/Roboto" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_bold"
                    android:paddingTop="10dp"
                    android:text="Select Beneficiary"
                    android:textColor="@color/red_theme"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/radioGroupWithdraw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/upiradiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="onRadioButtonClicked"
                        android:text="UPI"
                        android:visibility="gone" />


                    <RadioButton
                        android:id="@+id/bankradiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:buttonTint="@color/yellow_theme"
                        android:fontFamily="@font/roboto_regular"
                        android:text="BANK ACCOUNT"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/benLayout_sendMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/building_new" />

                    <Spinner
                        android:id="@+id/bankBenSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/divider" />

                <LinearLayout
                    android:id="@+id/withdrawAmountlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/rupee_new" />

                        <EditText
                            android:id="@+id/withdrawAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="0dp"
                            android:background="@null"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="Enter Amount"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="7"
                            android:paddingLeft="15sp"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/calculatedamount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="right"
                            android:paddingLeft="0dp"
                            android:text="Enter amount"
                            android:textColor="@color/red_theme"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="5dp"
                            android:padding="5dp"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_bold"
                                    android:gravity="left"
                                    android:padding="10dp"
                                    android:text="Amount reflect in your account"
                                    android:textColor="@color/red_theme"
                                    android:textSize="15sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height=".5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@color/yellow" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/roboto_bold"
                                        android:padding="10dp"
                                        android:text="Withdrawal Amount"
                                        android:textColor="@color/black"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:id="@+id/tv_withdrawalamount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:padding="10dp"
                                        android:text="10"
                                        android:textColor="@color/black"
                                        android:textSize="13sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/roboto_bold"
                                        android:padding="10dp"
                                        android:text="Transaction Fee"
                                        android:textColor="@color/black"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:id="@+id/tv_sendtax"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:padding="10dp"
                                        android:text="10"
                                        android:textColor="@color/black"
                                        android:textSize="13sp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height=".5dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@color/divider" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/roboto_bold"
                                        android:padding="10dp"
                                        android:text="Total Amount"
                                        android:textColor="@color/black"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:id="@+id/tv_total_amountsendmoney"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:padding="10dp"
                                        android:text="10"
                                        android:textColor="@color/black"
                                        android:textSize="13sp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:background="@color/white" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnWithdraw"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/amount"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/blue_green_round_btn"
                        android:fontFamily="@font/roboto_bold"
                        android:padding="10dp"
                        android:text="Withdraw Money"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/transactionFeeText_sendMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Transaction fee: 2% or Minimum â‚¹ 10 "
                        android:textColor="@color/red"
                        android:textSize="14sp" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="15dp"
                    android:elevation="5dp"
                    android:padding="5dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:id="@+id/BankBenAddBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/plus_new" />

                        <TextView
                            android:id="@+id/tv_bank_click_here"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Add New Bank Account"
                            android:textColor="@color/red_theme"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#f4f5ff" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</RelativeLayout>