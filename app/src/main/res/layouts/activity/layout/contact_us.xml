<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            >
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/view2">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@null"
                    >
                    <ImageView
                        android:id="@+id/clear_btn_contactUs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/ic_clear_black_24dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="    Back To Home"
                        />
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_margin="15dp"
                android:visibility="gone">


                <EditText
                    android:id="@+id/contactus_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:background="@drawable/login_input_bg"
                    android:hint="Email"
                    />
                <EditText
                    android:id="@+id/contactus_subject"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:background="@drawable/login_input_bg"
                    android:hint="Your Subject"
                    />
                <EditText
                    android:id="@+id/contactus_message"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:inputType="textMultiLine"
                    android:textSize="15dp"
                    android:background="@drawable/login_input_bg"
                    android:hint="Message"
                    />
                <Button
                    android:id="@+id/contactus_submit"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Submit"
                    android:layout_gravity="center|right"
                    android:textColor="#fff"
                    android:background="@drawable/rounded_buttons"
                    />
            </LinearLayout>


            <TextView
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000"
                />
            <TextView
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Safepe Payments "
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textIsSelectable="true"
                android:textSize="18dp"
                android:layout_marginTop="30dp"
                android:textColor="#000"
                />
            <TextView
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address :- "
                android:layout_gravity="center"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/sendmail"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email ID: support@safepayu.com"
                android:layout_gravity="center"
                android:textIsSelectable="true"
                android:textSize="16dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In case of any inconvenience regarding the transaction of money OR further query then you can contact us:"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12dp"
                android:layout_marginTop="25dp"
                android:textColor="#000"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Whatsapp and Call"
                android:textSize="12dp"
                android:textColor="#333"
                android:layout_gravity="center"
                android:textIsSelectable="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+91 8376097766, +91 9867967827"
                android:textSize="16dp"
                android:textColor="#29B6F6"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textIsSelectable="true"/>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+91 8860722217"
                    android:textSize="14dp"
                    android:textColor="#34ad38"
                    android:textIsSelectable="true"
                    android:background="@null"
                    android:textStyle="bold"
                    />

                <Button
                    android:id="@+id/call_button_usa"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="-30dp"
                    android:text="+1 6808000842"
                    android:textSize="14dp"
                    android:textColor="#3454dc"
                    android:textIsSelectable="true"
                    android:paddingLeft="0dp"
                    android:background="@null"
                    android:textStyle="bold"
                    android:paddingRight="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    />

                <Button
                    android:id="@+id/call_button_india"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_weight="1"
                    android:text="+91 8860722217"
                    android:textSize="14dp"
                    android:textColor="#34ad38"
                    android:textIsSelectable="true"
                    android:background="@null"
                    android:textStyle="bold"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/visit_website"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visit Our Website"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#0f15d1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                >
                <TextView
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Copyright Â© 2019 Safepe Payments"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="#000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="All Rights Reserved"
                    android:textSize="12dp"
                    android:textColor="#000"
                    android:textIsSelectable="true"
                    android:paddingLeft="20dp"
                    android:gravity="center"
                    android:background="@null"
                    android:paddingRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_marginTop="20dp"
        android:layout_above="@id/darkline"
        android:id="@+id/lightline"
        android:background="@color/lightLine"/>
    <View
        android:id="@+id/darkline"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="7dp"
        android:background="@color/darkLine"/>

</RelativeLayout>